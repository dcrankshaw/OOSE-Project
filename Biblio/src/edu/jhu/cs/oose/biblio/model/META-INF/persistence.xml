<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="edu.jhu.cs.oose.biblio.model.jpa">
     <provider>org.hibernate.ejb.HibernatePersistence</provider>
      <jta-data-source>java:/DefaultDS</jta-data-source>
      
        <class>edu.jhu.cs.oose.biblio.model.Tag</class>
        <class>edu.jhu.cs.oose.biblio.model.Bookmark</class>
        <class>edu.jhu.cs.oose.biblio.model.FileMetadata</class>
        <class>edu.jhu.cs.oose.biblio.model.Category</class>

        <properties>
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.connection.driver_class" value="org.hsqldb.jdbcDriver" />
            <property name="hibernate.connection.url" value="jdbc:h2:file:db1;DB_CLOSE_DELAY=-1;MVCC=TRUE" />
            <property name="hibernate.connection.username" value="sa" />
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/>

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="create-drop" />
        </properties>

    </persistence-unit>

</persistence>